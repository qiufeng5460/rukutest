/* pages/canvas/canvas.wxss */

canvas{
  position: fixed;
  top: 0;
  left:-999px;
}

.share{
  position: absolute;
  bottom: 100rpx;
  width: 70%;
  left: 15%;
}

.preview{
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.5);
  z-index:2;
  position:absolute;
}

.preview image{
  width:50%;
  left:25%;
  top:10%;
  position:absolute;
  z-index:3;
  border: 1px dashed #fff;  
}

.preview button{
  width:40%;
  left:30%;
  bottom:200rpx;
  position:absolute;
}